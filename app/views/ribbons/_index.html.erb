<div class = 'container'>
  <h2> Ribbons</h2>
  <div class= 'pull-right'>
    <%= link_to 'Add Ribbon', new_ribbon_path, 
                class: "btn btn-primary", id: 'new-ribbon-link' %>
  </div>
  <% @ribbons = Ribbon.all if @ribbons.nil? %> 
  <table class = 'table tb-striped'>
    <thead>
      <th> Name </th>
      <th> Subject </th>
        <% if current_user.role == 'parent' %>
          <th> Administration </th>
        <%end%>
    </thead>
    <% @ribbons.each do |ribbon| %>
      <tr>
        <td> <%= ribbon.name %> </td>
        <td> <%= ribbon.subject_id %> </td>
        <% if current_user.role == 'parent' %>
          <td> 
            <%= link_to 'Edit Ribbon', edit_ribbon_path(ribbon), class: "btn btn-success", id: 'edit-ribbon-link' %> 
            <%= link_to 'Delete Ribbon', ribbon_path(ribbon), method: :delete,
                  class: "btn btn-danger", id: 'delete-ribbon-link' %>
          </td>
        <%end%>
      </tr>
    <%end%>
  </table>
</div>
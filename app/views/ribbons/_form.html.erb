<%= form_for @ribbon, url: path, title: title, remote: true, html: {mulitpart: true, class: 'well', role: 'form'} do |f| %>
  <div id="form-errors"></div>
  <%= label_tag(:q, title) %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :name, placeholder: 'Enter ribbon name ', class: 'form-control' %>
      </div>
    </div>
  </div>

 <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.collection_select :subject_id, Subject.all, :id, :subject_name, :prompt => "Select a subject" %>
      </div>
    </div>
  </div>

  <div class="form-group row submit">
    <%= button_tag type: "submit", class: "btn btn-primary", name: "commit", value: "Save" do %>
      <a>Save</a>
    <% end %>
    <a class="btn btn-danger hvr-trim" id='add-ribbon-cancel-button' data-behaviour="form-dismiss">Cancel</a>
  </div>
<% end %>

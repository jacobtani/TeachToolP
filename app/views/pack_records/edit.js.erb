//do the following actions when editing a  pack record
$("#new-packrecord-form").addClass('hidden');
$("#edit-packrecord-link").attr('disabled', 'disabled');
$("#edit-packrecord-form").removeClass('hidden');
$("#edit-packrecord-form").html("<%= j render('form', pack_record: @pack_record, remote_mode: true, title: 'Edit Pack Record', path: pack_record_path(@pack_record) ) %>");
$(document).trigger('init_placeholder');

//if click outside the form, close it and make the button enabled
var pack_record = "#edit_pack_record_" + <%=@pack_record.id%>;
var container = $(pack_record);

$(document).mouseup(function (e) {
    if (!container.is(e.target) && container.has(e.target).length === 0) {
      if ( !$("#new-pack-link").is(e.target) ) {
        container.hide();
      };
      $("#edit-packrecord-link").removeAttr('disabled', 'disabled');
    }
});

//if cancel button is clicked, make button enabled
$("#add-packrecord-cancel-button").on("click", function () {
  $("#edit-packrecord-link").removeAttr('disabled', 'disabled');
  container.hide();
});

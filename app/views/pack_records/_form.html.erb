<%= bootstrap_form_for(@pack_record, layout: :horizontal)  do |f| %>
  <div id="form-errors"></div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.date_select :start_date, placeholder: 'Enter start date ', class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.date_select :due_date, placeholder: 'Enter due date ', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= f.collection_select :pack_id, Pack.all, :id, :name, prompt: 'Select pack', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.select :status, PackRecord.statuses.keys.to_a %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.collection_select :user_id, User.all.where(role: 'student'), :id, :first_name, prompt: 'Select user', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.number_field :accuracy, placeholder: 'Enter accuracy', min: 0, max: 100, class: 'form-control' %>
        <%= f.number_field :completion, placeholder: 'Enter completion', min: 0, max: 100, class: 'form-control' %>
        <%= f.number_field :quality, placeholder: 'Enter quality', min: 0, max: 100, class: 'form-control' %>
        <%= f.number_field :presentation, placeholder: 'Enter presentation', min: 0, max: 100, class: 'form-control' %>
        <%= f.number_field :consistency, placeholder: 'Enter consistency', min: 0, max: 100, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :comment, placeholder: 'Enter comments', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group row submit">
    <%= button_tag type: "submit", class: "btn btn-primary", name: "commit", value: "Save" do %>
      <a>Save</a>
    <% end %>
    <%= link_to 'Cancel', admin_path, class: 'btn btn-info' %>
  </div>

<% end %>

<%= form_for @pack_record, url: path, title: title, remote: true, html: {mulitpart: true, class: 'well', role: 'form'} do |f| %>
  <div id="form-errors"></div>
  <%= label_tag(:q, title) %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.datetime_field :start_date, placeholder: 'Enter start date ', class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.datetime_field :due_date, placeholder: 'Enter due date ', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= f.collection_select :pack_id, Pack.all, :id, :name, prompt: 'Select pack', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.select :status, PackRecord.statuses.keys.to_a %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.collection_select :user_id, User.all.where(role: 'student'), :id, :first_name, prompt: 'Select user', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.number_field :score, placeholder: 'Enter score', min: 0, max: 100, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :comment, placeholder: 'Enter comments', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group row submit">
    <%= button_tag type: "submit", class: "btn btn-primary", name: "commit", value: "Save" do %>
      <a>Save</a>
    <% end %>
    <a class="btn btn-danger hvr-trim" id='add-packrecord-cancel-button' data-behaviour="form-dismiss">Cancel</a>
  </div>
<% end %>

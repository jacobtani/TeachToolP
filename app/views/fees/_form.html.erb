<div class='container form-scrollable'>
  <%= bootstrap_form_for(@fee, layout: :horizontal)  do |f| %>
    <%= f.text_field :fee_name, placeholder: 'Enter fee name', class: 'form-control required' %>  
    <%= f.date_field :start_date, placeholder: 'Enter start date', class: 'form-control required' %>
    <%= f.date_field :end_date, placeholder: 'Enter end date', class: 'form-control required' %>
    <%= f.number_field :amount, placeholder: 'Enter amount', class: 'form-control required' %>
    <%= f.select :fee_type, Fee.fee_types.keys.to_a, label: 'Type' %>
    <%= f.collection_select :subject_id, Subject.all, :id, :subject_name, :prompt => "Select Subject" %>
    <div class='level-header'>
      <%= button_tag(type: 'submit', class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."}) do %>
        <i class="fa fa-save"></i> Save
      <% end %>      
      <%= link_to fa_icon("undo", text: 'Cancel'), admin_path, class: 'btn btn-danger hvr-sweep-to-right' %>
    </div>
  <% end %>
</div>
<div class = 'container'>
  <h2>Register User </h2>
  <%= bootstrap_form_for(resource, as: resource_name, :class => 'form-inline', url: registration_path(resource_name)) do |f| %>
    <%= f.text_field :first_name %>
    <%= f.text_field :surname %>
    <%= f.select :role, ['parent', 'student']%>
    <%= f.text_field :postal_address %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.submit "Log In" %>
  <% end %>
</div>

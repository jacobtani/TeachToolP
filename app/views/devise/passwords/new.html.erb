<div class='container'>
  <h2>Forgot your password</h2>
  <%= bootstrap_form_for resource, as: resource_name, url: password_path(resource_name) do |f| %>
    <%= devise_error_messages! %>     
    <%= f.email_field :email, autofocus: true, label: 'Email' %>
    <%= f.button "Send me reset password instructions", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending instructions..."} %>    
  <% end %>
</div>

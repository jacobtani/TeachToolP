<%= bootstrap_form_for(@offer, layout: :horizontal)  do |f| %>  <div id="form-errors"></div>

  <div id="form-errors"></div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :offer_name, placeholder: 'Enter offer name ', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :offer_description, placeholder: 'Enter offer description ', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.date_select :start_date, placeholder: 'Enter start date ', class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.date_select :end_date, placeholder: 'Enter end date ', class: 'form-control' %>
      </div>
    </div>
  </div>
 
 <div class="form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= f.number_field :discount_monthly, placeholder: 'Enter monthly discount amount', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.number_field :percentage_monthly, placeholder: 'Enter monthly percentage discount', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.number_field :number_of_subjects, placeholder: 'Enter number of subjects', class: 'form-control' %>
      </div>
    </div>
  </div>

 <div class="form-group">
    <div class="row">
      <div class="col-sm-6">
        <%= f.number_field :discount_enrolment, placeholder: 'Enter enrolment discount amount', class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.number_field :percentage_enrolment, placeholder: 'Enter enrolment percentage discount', class: 'form-control' %>
      </div>
    </div>
  </div>
 
  <div class="form-group row submit">
    <%= f.button "Save", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>    
    <%= link_to 'Cancel', admin_path, class: 'btn btn-info' %>
  </div>

<% end %>

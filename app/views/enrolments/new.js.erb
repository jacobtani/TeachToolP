//do the following actions when creating a new enrolment
$("#new-user-form").addClass('hidden');
$("#edit-enrolment-form").addClass('hidden');
$("#new-enrolment-form").removeClass('hidden');
$("#new-enrolment-form").html('<%= j render("form", user_id: @user.id, enrolment: @enrolment, title: "Add Enrolment", path: user_enrolments_path(user_id: @user), user_id: current_user.id) %>')
//$("#new-user-link").attr('disabled', 'disabled');
$(document).trigger('init_placeholder');

//if click outside the form, close it and make the button enabled
var container = $("#new-enrolment-form");
$(document).mouseup(function (e) {
    if (!container.is(e.target) && container.has(e.target).length === 0) {
        container.hide();
	       $("#new-enrolment-link").removeAttr('disabled', 'disabled');
    }
});
//if cancel button is clicked, make button enabled
$("#add-enrolment-cancel-button").on("click", function () {
	$("#new-enrolment-link").removeAttr('disabled', 'disabled');
	container.hide();
});
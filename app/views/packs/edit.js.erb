//do the following actions when editing a  pack
$("#new-subject-form").addClass('hidden');
$("#edit-subject-form").addClass('hidden');
$("#new-offer-form").addClass('hidden');
$("#edit-offer-form").addClass('hidden');
$("#new-pack-form").addClass('hidden');
$("#edit-pack-link").attr('disabled', 'disabled');
$("#edit-pack-form").removeClass('hidden');
$("#edit-pack-form").html("<%= j render('form', pack: @pack, remote_mode: true, title: 'Edit Pack', path: pack_path(@pack) ) %>");
$(document).trigger('init_placeholder');
//if click outside the form, close it and make the button enabled
var pack = "#edit_pack_" + <%=@pack.id%>;
var container = $(pack);

$(document).mouseup(function (e) {
    if (!container.is(e.target) && container.has(e.target).length === 0) {
      if ( !$("#new-pack-link").is(e.target) ) {
        container.hide();
      };
      $("#edit-pack-link").removeAttr('disabled', 'disabled');
    }
});

//if cancel button is clicked, make button enabled
$("#add-pack-cancel-button").on("click", function () {
  $("#edit-pack-link").removeAttr('disabled', 'disabled');
  container.hide();
});

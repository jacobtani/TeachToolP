<div class = 'container form-scrollable level-header'>
  <h1> CANCEL ACCOUNT </h1>
  <%= bootstrap_form_for @message do |f| %>
    <% render 'messages/message_errors_template', locals: {:message => @message} %>
    <%= f.collection_select :child, current_user.children, :id, :full_name, :prompt => "Select student", label: 'Student Name' %>

    <%= f.form_group :content, label: { text: "Cancellation Reason" } do %>
      <%= f.radio_button :content, 'Student is not cooperating', checked: true, label: 'Student is not cooperating'  %>
      <%= f.radio_button :content, 'Student is not coping', label: 'Student is not coping' %>
      <%= f.radio_button :content, 'Financial Reasons', label: 'Financial Reasons' %>
      <%= f.radio_button :content, 'Adults under time pressure', label: 'Adults under time pressure' %>
      <%= f.radio_button :content, 'Students under time pressure', label: 'Students under time pressure' %>
      <%= f.radio_button :content, 'Student has a lot of homework from school', label: 'Student has alot of homework from school' %>
      <%= f.radio_button :content, 'Student has activities after school/weekends', label: 'Student has activities after school/weekend' %>
      <%= f.radio_button :content, 'Other', label: 'Other' %>
    <% end %>
    <%= f.hidden_field :message_subject, value: 'TERMINATED ACCOUNT'%>
    <div class='level-header'>
      <%= button_tag(type: 'submit', class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Terminating..."}) do %>
        <i class="fa fa-trash"></i> Terminate
      <% end %>
      <%= link_to fa_icon("undo", text: 'Cancel'), admin_path, class: 'btn btn-danger hvr-sweep-to-right' %>
    </div>
  <% end %>
</div>
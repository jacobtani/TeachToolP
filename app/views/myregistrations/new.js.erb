//do the following actions when creating a new user
$("#new-enrolment-form").addClass('hidden');
$("#new-user-form").removeClass('hidden');
$("#new-user-form").html('<%= j render("form", user: @user, title: "Add User", path: user_registration_path(@user)) %>')
//$("#new-user-link").attr('disabled', 'disabled');
$(document).trigger('init_placeholder');
$(".new-user-form").addClass('hidden');

//if click outside the form, close it and make the button enabled
var container = $("#new-user-form");
$(document).mouseup(function (e) {
    if (!container.is(e.target) && container.has(e.target).length === 0) {
        container.hide();
	       $("#new-user-link").removeAttr('disabled', 'disabled');
    }
});
//if cancel button is clicked, make button enabled
$("#add-user-cancel-button").on("click", function () {
	$("#new-user-link").removeAttr('disabled', 'disabled');
	container.hide();
});
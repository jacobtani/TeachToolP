//do the following actions when editing a subject
$("#edit-fee-form").addClass('hidden');
$("#new-fee-form").addClass('hidden');
$("#edit-enclosure-form").addClass('hidden');
$("#new-enclosure-form").addClass('hidden');
$("#edit-pack-form").addClass('hidden');
$("#new-pack-form").addClass('hidden');
$("#edit-offer-form").addClass('hidden');
$("#new-offer-form").addClass('hidden');
$("#edit-ribbon-form").addClass('hidden');
$("#new-ribbon-form").addClass('hidden');
$("#new-subject-form").addClass('hidden');
$("#edit-subject-link").attr('disabled', 'disabled');
$("#edit-subject-form").removeClass('hidden');
$("#edit-subject-form").html("<%= j render('form', subject: @subject, remote_mode: true, title: 'Edit Subject', path: subject_path(@subject) ) %>");
$(document).trigger('init_placeholder');

//if click outside the form, close it and make the button enabled
var subject = "#edit_subject_" + <%=@subject.id%>;
var container = $(subject);

$(document).mouseup(function (e) {
    if (!container.is(e.target) && container.has(e.target).length === 0) {
      if ( !$("#new-subject-link").is(e.target) ) {
        container.hide();
      };
      $("#edit-subject-link").removeAttr('disabled', 'disabled');
    }
});

//if cancel button is clicked, make button enabled
$("#add-subject-cancel-button").on("click", function () {
  $("#edit-subject-link").removeAttr('disabled', 'disabled');
  container.hide();
});

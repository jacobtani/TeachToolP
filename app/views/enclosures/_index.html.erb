<div class = 'container'>
  <h2> Enclosures</h2>
  <div class= 'pull-right'>
        <%#= link_to 'Add Enclosure', new_pack_enclosure_path, remote: true, class: "btn btn-primary", id: 'new-enclosure-link' %>
  </div>

  <div class="row">
    <div id="new-enclosure-form" class="col-sm-6"></div>
  </div>

  <div class="row">
    <div id="edit-enclosure-form" class="col-sm-6"></div>
  </div>

  <% @enclosures = Enclosure.all if @enclosures.nil? %> 
  <table class = 'table table-striped'>
    <thead>
      <th> Enclosure Name </th>
      <% if current_user.role == 'parent' %>
      	<th> Administration </th>
      <%end%>
    </thead>
    <% @enclosures.each do |enclosure| %>
      <tr>
        <td> <%= enclosure.name %> </td>
        <% if current_user.role == 'parent' %>
          <td> 
            <%#= link_to 'Edit', edit_enclosure_path(id: enclosure.id), remote: true, class: "btn btn-success", id: 'edit-enclosure-link' %> 
            <%#= link_to 'Delete', enclosure_path(enclosure), method: :delete,
                class: "btn btn-danger", id: 'delete-enclosure-link' %>
          </td>
        <%end%>
      </tr>
    <%end%>
  </table>
</div>
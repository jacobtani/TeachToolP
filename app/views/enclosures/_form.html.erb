<%= form_for @enclosure, url: path, title: title, remote: true, html: {mulitpart: true, class: 'well', role: 'form'} do |f| %>
  <div id="form-errors"></div>
  <%= label_tag(:q, title) %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-12">
        <%= f.text_field :name, placeholder: 'Enter enclosure name ', class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= f.number_field :barcode, placeholder: 'Enter barcode', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.date_select :due_date, placeholder: 'Enter due date', class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.select :enclosure_type, Enclosure.enclosure_types.keys.to_a %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-5">
      <%= f.collection_select :pack_id, Pack.all, :id, :name, :prompt => "Select Pack" %>
    </div>
  </div>

  <div class="form-group row submit">
    <%= button_tag type: "submit", class: "btn btn-primary", name: "commit", value: "Save" do %>
      <a>Save</a>
    <% end %>
    <a class="btn btn-danger hvr-trim" id='add-enclosure-cancel-button' data-behaviour="form-dismiss">Cancel</a>
  </div>
<% end %>

<div class = 'container'>
  
  <div class='jumbotron'>
    <h2> PARENT PORTAL </h2>
  </div>
  
  <div class = 'row'>
    <ul class="nav nav-sidebar pull-right level-header">
      <div class ='row navbuttons pull-right level-header'>
        
        <div class = "col-md-6 btn btn-success level-header"> 
          <li class= "dropdown"><a href="#" class="dropdown-toggle admin-header hvr-bounce-to-top" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Children <span class="caret"></span></a> 
            <ul class="dropdown-menu">
              <% current_user.children.each do |child|%>
                <li><%= link_to child.full_name, parent_student_view_path(id: child.id), class: "btn btn-info", id:'some-link'%></li>
              <%end%>
              <li>  <%= link_to 'Add Child', new_users_admin_path, class: "btn btn-info hvr-push", id: 'new-user-link' if user_signed_in? %></li>
            </ul>
          </li>
        </div>
        
        <div class = "col-md-6 btn btn-success level-header"> 
          <li class= "dropdown"><a href="#" class="dropdown-toggle admin-header hvr-bounce-to-top" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Send Email <span class="caret"></span></a> 
            <ul class="dropdown-menu">
              <li><%= link_to 'MISSING PACK/WORK', missing_pack_path(id: current_user.id), class: "btn btn-info hvr-push", id:'missing-pack-link' if user_signed_in? %></li>
              <li><%= link_to 'PARENT GENERAL QUESTIONS', general_parent_enquiry_path(id: current_user.id), class: "btn btn-info hvr-bounce-to-top", id:'general-parent-enquiry-link' if user_signed_in? %></li>
              <li><%= link_to 'PAYMENT RELATED MATTERS', payment_related_enquiry_path(id: current_user.id), class: "btn btn-info hvr-bounce-to-top", id:'payment-enquiry-link' if user_signed_in? %></li>
              <li><%= link_to 'STUDENT NEEDS HELP', parent_help_path(id: current_user.id), class: "btn btn-info hvr-bounce-to-top", id:'pack-help-link' if user_signed_in? %></li>
              <li><%= link_to 'RECOMMEND US', recommend_us_path(id: current_user.id), class: "btn btn-info hvr-bounce-to-top", id:'recommend-us-link' if user_signed_in? %></li>
            </ul>
          </li>
        </div>
       </div>
    </ul>
  </div>
  
  <div>
    <%= render 'users/show', locals: { user: current_user} %>
  </div> 
</div>